<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Title</title>
    <link rel="stylesheet" href="/stylesheets/category.css"/>
</head>
<body>
    <div id="categoryButtonContainer">
        <div id="categoryAdd" onclick="newCategoryModalOpen();">카테고리 생성</div>
    </div>
    <% myCategories.map((category) => {%>
    <div id="categoryContainer">
        <div id="shareobject">
            <p><%=category.categoryName%></p>
            <div id="tagGroup">
                <% category.tags.map((tag) => {%>
                    <span><%=tag.tagName%></span>
                <%})%>
            </div>
            <div id="providerGroup">
                <% category.sharer.map((user) => {%>
                    <span><%=user.name%></span>
                <%})%>
            </div>
        </div>
        <div id="categoryControlArea">
            <img src="/images/edit.png" class="categoryControl" id="categoryEdit" onclick='categoryEditModalOpen(<%=JSON.stringify(category)%>)'>
            <img src="/images/delete.png" class="categoryControl" id="categoryDelete" onclick='categoryDelete("<%=category._id%>")'>
        </div>
    </div>
    <%})%>

</body>
</html>